<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_main"
    app:startDestination="@id/home">

    <fragment
        android:id="@+id/home"
        android:name="com.kenshi.shoppi.ui.home.HomeFragment"
        android:label="HomeFragment" >
        <action
            android:id="@+id/action_home_to_productDetail"
            app:destination="@id/productDetail" />
    </fragment>
    <fragment
        android:id="@+id/cart"
        android:name="com.kenshi.shoppi.ui.CartFragment"
        android:label="CartFragment" />
    <fragment
        android:id="@+id/category"
        android:name="com.kenshi.shoppi.ui.CategoryFragment"
        android:label="CategoryFragment" />
    <fragment
        android:id="@+id/productDetail"
        android:name="com.kenshi.shoppi.ui.ProductDetailFragment"
        android:label="fragment_product_detail"
        tools:layout="@layout/fragment_product_detail" />
</navigation>